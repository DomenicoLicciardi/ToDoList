<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERT NOTE"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryText"/>
    <EditText
        android:id="@+id/note_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci il title"/>

    <EditText
        android:id="@+id/note_add_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci il testo"/>

    <EditText
        android:id="@+id/note_add_date_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="setta data scadenza"/>

</LinearLayout>